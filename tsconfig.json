{
  "extends": "@lime-soda/tsconfig/base",
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "target": "esnext",
    "paths": {
      "@lime-soda/button": [
        "./packages/button/src/index.ts"
      ]
    }
  },
  "include": [
    "packages/**/*.ts",
    "support/**/*.ts",
    ".storybook/**/*.ts",
    "tools/**/*.js",
    "*.ts",
    "*.js"
  ],
  "exclude": [
    ".turbo",
    "node_modules",
    "dist",
    "coverage",
    "storybook-static"
  ]
}
