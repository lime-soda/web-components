{
  "extends": "@lime-soda/tsconfig/base",
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "target": "esnext",
    "paths": {
      "@lime-soda/*": [
        "./packages/*"
      ]
    }
  },
  "include": [
    ".storybook/**/*.ts",
    "packages/**/*.stories.ts",
    "*.js",
    "*.ts"
  ],
  "exclude": [
    ".turbo",
    "node_modules",
    "dist",
    "coverage",
    "storybook-static"
  ]
}
