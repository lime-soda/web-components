{
  "name": "@lime-soda/web-components",
  "version": "0.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "build": "turbo run build build:types build:manifest",
    "create-component": "create-component",
    "dev": "pnpm run -w --parallel \"/^dev:.*/\"",
    "dev:mcp": "pnpm run --filter=@lime-soda/mcp-server dev",
    "dev:packages": "turbo watch build build:types --filter=./packages/*",
    "dev:storybook": "pnpm run --filter=@lime-soda/storybook dev",
    "dev:support": "turbo watch build --filter=@lime-soda/tokens",
    "lint": "turbo run lint",
    "prepare": "husky",
    "release": "changeset publish"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.18.0",
  "lint-staged": {
    "*.{js,ts,json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.32.0",
    "@lime-soda/eslint-config": "workspace:*",
    "@lime-soda/generate": "workspace:*",
    "@lime-soda/tsconfig": "workspace:*",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.38.0"
  }
}
