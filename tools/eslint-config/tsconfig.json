{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationDir": "./dist",
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": true
  },
  "include": [
    "src/**/*"
  ]
}
