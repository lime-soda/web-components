{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleDetection": "force",
    "noUnusedLocals": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  }
}
