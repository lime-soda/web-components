{
  "shadow": {
    "$type": "shadow",
    "sm": {
      "$value": {
        "color": "{color.black}",
        "offsetX": "0.5rem",
        "offsetY": "0.5rem",
        "blur": "1.5rem",
        "spread": "0rem"
      },
      "$extensions": {
        "org.lime-soda": {
          "modes": {
            "dark": {
              "$type": "shadow",
              "$value": {
                "color": "{color.white}",
                "offsetX": "0.5rem",
                "offsetY": "0.5rem",
                "blur": "1.5rem",
                "spread": "0rem"
              }
            }
          }
        }
      }
    }
  }
}
