{
  "button": {
    "transition": {
      "$type": "transition",
      "$value": [
        {
          "property": "background-color",
          "duration": "0.2s",
          "timing-function": "ease-in-out"
        },
        {
          "property": "color",
          "duration": "0.2s",
          "timing-function": "ease-in-out"
        }
      ]
    },
    "sm": {
      "font": {
        "$type": "typography",
        "$value": "{text.sm}"
      },
      "padding": {
        "$type": "dimension",
        "$value": "0.375rem 0.75rem"
      },
      "border-radius": {
        "$type": "dimension",
        "$value": "{radius.md}"
      }
    },
    "md": {
      "font": {
        "$type": "typography",
        "$value": "{text.body}"
      },
      "padding": {
        "$type": "dimension",
        "$value": "0.5rem 0.875rem"
      },
      "border-radius": {
        "$type": "dimension",
        "$value": "{radius.md}"
      }
    },
    "lg": {
      "font": {
        "$type": "typography",
        "$value": "{text.body}"
      },
      "padding": {
        "$type": "dimension",
        "$value": "0.75rem 1rem"
      },
      "border-radius": {
        "$type": "dimension",
        "$value": "{radius.md}"
      }
    },
    "primary": {
      "background-color": {
        "$type": "color",
        "$value": "{color.primary.400}"
      },
      "color": {
        "$type": "color",
        "$value": "{color.text.on-primary}"
      }
    }
  }
}
