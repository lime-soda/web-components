{
  "button": {
    "$description": "Design tokens for button component styling and behavior",
    "transition": {
      "$type": "transition",
      "$value": {
        "delay": "0",
        "duration": "0.2s",
        "timingFunction": "ease-in-out"
      },
      "$description": "Transition timing for button state changes"
    },
    "sm": {
      "$description": "Small button size variant tokens",
      "font": {
        "$type": "typography",
        "$value": "{text.sm}",
        "$description": "Typography scale for small button"
      },
      "padding": {
        "$type": "dimension",
        "$value": "0.375rem 0.75rem",
        "$description": "Internal spacing for small button"
      },
      "border-radius": {
        "$type": "dimension",
        "$value": "{radius.md}",
        "$description": "Corner radius for small button"
      }
    },
    "md": {
      "$description": "Medium button size variant tokens",
      "font": {
        "$type": "typography",
        "$value": "{text.body}",
        "$description": "Typography scale for medium button"
      },
      "padding": {
        "$type": "dimension",
        "$value": "0.5rem 0.875rem",
        "$description": "Internal spacing for medium button"
      },
      "border-radius": {
        "$type": "dimension",
        "$value": "{radius.md}",
        "$description": "Corner radius for medium button"
      }
    },
    "lg": {
      "$description": "Large button size variant tokens",
      "font": {
        "$type": "typography",
        "$value": "{text.body}",
        "$description": "Typography scale for large button"
      },
      "padding": {
        "$type": "dimension",
        "$value": "0.75rem 1rem",
        "$description": "Internal spacing for large button"
      },
      "border-radius": {
        "$type": "dimension",
        "$value": "{radius.md}",
        "$description": "Corner radius for large button"
      }
    },
    "primary": {
      "$description": "Primary button color scheme tokens",
      "background-color": {
        "$type": "color",
        "$value": "{color.primary.400}",
        "$description": "Primary button background color"
      },
      "background-color-hover": {
        "$type": "color",
        "$value": "{color.primary.500}",
        "$description": "Primary button background color on hover"
      },
      "color": {
        "$type": "color",
        "$value": "{color.text.on-primary}",
        "$description": "Primary button text color"
      }
    }
  }
}
