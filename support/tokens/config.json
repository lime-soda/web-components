{
  "source": ["primitives/**/*.json", "theme/color-light.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "dist/css/",
      "files": [
        {
          "destination": "tokens-light.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true,
            "showFileHeader": true
          }
        }
      ]
    }
  }
}
