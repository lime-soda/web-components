  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.11.0",
    "@lime-soda/eslint-config": "workspace:*",
    "@modelcontextprotocol/inspector": "^0.17.0",
    "@types/node": "^22.0.0",
    "tsx": "^4.20.4",
