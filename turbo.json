{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**/*.{js,css}"]
    },
    "build:types": {
      "dependsOn": ["^build", "^build:types"],
      "outputs": ["dist/**/*.d.ts"]
    },
    "build:manifest": {
      "dependsOn": ["^build"],
      "outputs": ["custom-elements.json"]
    },
    "lint": {
      "cache": true,
      "inputs": [
        "src/**/*.ts",
        "src/**/*.js",
        "*.ts",
        "*.js",
        "eslint.config.js",
        "tsconfig.json"
      ]
    },
    "@lime-soda/storybook#build": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    }
  }
}
